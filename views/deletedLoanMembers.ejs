<!DOCTYPE html>
<html>
    <head>
        <title>Deleted Loan Members</title>
        <link rel="stylesheet" href="/assets/css/style.css">
        <link href='https://fonts.googleapis.com/css?family=Antic' rel='stylesheet'>
        <script src="/assets/js/jquery.js"></script>
        <script>
            $(document).ready(()=>{
                $(window).load("/deletedLoanMem");
            });
            $(document).ready(function () {
              $("#searchDelLoan").on("keyup", function() {
                var valueLoan = $(this).val().toLowerCase();
                $("#myTable2 tr").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(valueLoan) > -1);
                });
              });
            });
        </script>
    </head>
    <body>
        <div class="header" id="header">
            <a href="/home" class="header_title">Jai Ambe<br>Mitra Mandal</a>
            <div class="header_links">
              <a href="/home">Home</a>
              <a href="/members">Members</a>
			  <a href="/loan">Loan</a>
              <a href="/graph">Graph</a>
              <a href="/deletedLoanMembers" style="color: greenyellow;">Deleted</a>
              <a href="/schemes">Schemes</a>
              <a href="/logout">Logout</a>
            </div>
		</div>
        <div class="back_1_members">
        <div class="back_1_members_content">
            <table cellpadding="5">
              <tr>
                <td style="width: 13%;">
                  <h1>Deleted Members</h1>
                </td>
                <td style="width: 1%;">
                  <a href="deletedMem">Members</a>
                </td>
                <td style="width: 1%;">
                  <a href="deletedLoanMembers" style="background:rgba(0,0,0,0.6);">Loan</a>
                </td>
                <td align="right" style="width: 30%;">
                  <form action="/search" method="POST" class="form_search">
                    <input type="text" class="search_bar" name="search" id="searchDelLoan" placeholder="Search..." autocomplete="on" spellcheck="false" required>
                  </form>
                </td>
              </tr>
            </table>
          <div class="line_1"></div>
          <div class="member_list">
            <table border="2" cellpadding="18" class="mem_table">
              <tr>
                <th>
                  ID
                </th>
                <th>
                  Name
                </th>
                <th>
                  Initial Date
                </th>
                <th>
                  Final Date
                </th>
                <th>
                  City
                </th>
                <th>
                  Amount
                </th>
                <th>
                  View
                </th>
              </tr>
              <tbody id="myTable2">
                <% if(deletedLoanRow>0) { %>
                <% for(var i = 0; i < deletedLoanRow; i++) { %>
                <tr>
                  <td><%= deletedLoanMemb[i].id %></td>
                  <td><%= deletedLoanMemb[i].name %></td>
                  <td><%= deletedLoanMemb[i].date.toDateString() %></td>
                  <td><%= deletedLoanMemb[i].fdate.toDateString() %></td>
                  <td><%= deletedLoanMemb[i].cityname.toUpperCase() %></td>
                  <td><%= deletedLoanMemb[i].amount %></td>
                  <td>
                    <a href="recover/<%=deletedLoanMemb[i].loanid%>">Recover</a>
                  </td>
                </tr>
                <% } %>
                <% } else { %>
                  <td>Null</td>
                  <td>Null</td>
                  <td>Null</td>
                  <td>Null</td>
                  <td>Null</td>
                  <td>Null</td>
                  <td>Null</td>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
	</body>
</html>